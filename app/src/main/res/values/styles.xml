<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_color</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="colorAccent">@color/title_color</item>
    </style>


    <style name="AGP.AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_gray_1</item>
        <item name="colorPrimaryDark">@color/title_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <style name="AGP.ActivityTheme" parent="AGP.AppTheme.Base">
        <item name="windowActionBar">false</item>

    </style>

    <style name="list_inbox_text_list">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_deep</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_time">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_deep</item>
        <item name="android:layout_marginTop">-2dp</item>
    </style>

    <style name="list_inbox_text_list_first">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
