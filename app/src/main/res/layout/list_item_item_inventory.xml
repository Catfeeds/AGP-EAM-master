<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="#fff"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventory_location"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/inventory_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_num_title"
                android:hint="@string/have_not_data"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/inventory_location_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_num_title"
                android:text="@string/inventory_location_dec"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/inventory_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inventory_location_text"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/inventory_location_dec"
                android:hint="@string/have_not_data"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/inventory_curbaltotal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inventory_location_dec"
                android:text="@string/inventory_curbaltotal"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/inventory_curbaltotal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inventory_desc_text"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/inventory_curbaltotal_title"
                android:hint="@string/have_not_data"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>