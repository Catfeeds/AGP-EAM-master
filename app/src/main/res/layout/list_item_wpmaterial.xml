<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_container"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="2dp"
android:layout_marginTop="2dp"
android:background="#fff"
android:foreground="?android:selectableItemBackground"
android:orientation="vertical"
card_view:cardCornerRadius="2dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/invuseline_descsam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/wpmaterial_itemnum_id"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="1245255" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/wpmaterial_itemnum_id"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventory_itemnum_dec"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wpmaterial_description_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/drop-down"
                android:layout_toRightOf="@+id/item_desc_title"
                android:hint="@string/have_not_data"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/item_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_desc_title"
                android:layout_marginTop="5dp"
                android:text="@string/inventory_location"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wpmaterial_location_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wpmaterial_description_id"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/drop-down"
                android:layout_toRightOf="@+id/item_desc_title"
                android:ellipsize="end"
                android:ems="14"
                android:hint="@string/have_not_data"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_location_title"
                android:layout_marginTop="5dp"
                android:text="@string/wplabor_quantity"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wpmaterial_quantity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wpmaterial_location_id"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/drop-down"
                android:layout_toRightOf="@+id/item_status_title"
                android:ellipsize="end"
                android:ems="14"
                android:hint="@string/have_not_data"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/drop-down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_drop_down" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invuseline_descsam">
        <include layout="@layout/activity_wpmaterial_details"></include>
    </RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>


