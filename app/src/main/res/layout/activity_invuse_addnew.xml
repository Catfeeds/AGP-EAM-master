<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/title_id"
        layout="@layout/title_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ScrollView
            android:id="@+id/scrollview_id"
            android:layout_below="@id/title_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbars="vertical"
            >
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_corner_bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <TextView
                            android:layout_width="@dimen/dimens_100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/INVUSE_DESCRIPTION"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/dimens_16sp" />

                        <EditText
                            android:id="@+id/description_text_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:background="@drawable/editsharp"
                            android:drawablePadding="@dimen/size_5dp"
                            android:gravity="right"
                            android:hint="@string/necessary"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/dimens_16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <TextView
                            android:layout_width="@dimen/dimens_100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/INVUSE_UDFILENO"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/dimens_16sp" />

                        <EditText
                            android:id="@+id/udfileno_text_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:background="@drawable/editsharp"
                            android:drawablePadding="@dimen/size_5dp"
                            android:gravity="right"
                            android:hint="@string/have_not_data"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/dimens_16sp"  />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <TextView
                            android:id="@+id/yuankufang"
                            android:layout_width="@dimen/dimens_100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/FROMSTORELOC"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/dimens_16sp" />

                        <EditText
                            android:id="@+id/FROMSTORELOC_text_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/editsharp"
                            android:gravity="center_vertical" />
                        <ImageView
                            android:id="@+id/FROMSTORELOC_textmore_id"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_search"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <TextView
                            android:layout_width="@dimen/dimens_100dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/INVUSE_INVOWNER"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/dimens_16sp" />

                        <EditText
                            android:id="@+id/inv_owner_text_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/editsharp"
                            android:gravity="center_vertical"/>
                        <ImageView
                            android:id="@+id/inv_owner_textmore_id"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_search"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:id="@+id/invuse_mt_spid">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/size_5dp"
                            >

                            <TextView
                                android:layout_width="@dimen/dimens_100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/UDTOWAREHOUSE"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/dimens_16sp"
                                />

                            <EditText
                                android:id="@+id/UDTOWAREHOUSE_text_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:background="@drawable/editsharp"
                                android:gravity="center_vertical"
                                />

                            <ImageView
                                android:id="@+id/UDTOWAREHOUSE_textmore_id"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_search"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/size_5dp"
                            >

                            <TextView
                                android:layout_width="@dimen/dimens_100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/UDINVOWNER"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/dimens_16sp" />

                            <EditText
                                android:id="@+id/UDINVOWNER_text_id"
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:background="@drawable/editsharp"
                                android:gravity="center_vertical"
                                />
                            <ImageView
                                android:id="@+id/UDINVOWNER_textmore_id"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_search"
                                />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/size_5dp"
                            >

                            <TextView
                                android:layout_width="@dimen/dimens_100dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/SUBJECT"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/dimens_16sp" />

                            <EditText
                                android:id="@+id/subject_text_id"
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:background="@drawable/editsharp"
                                android:gravity="center_vertical" />
                            <Spinner
                                android:id="@+id/spnner"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_search"
                                />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8.0"
            android:text="@string/lineinfo"
            android:textColor="@color/light_black"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/dimens_16sp"
            android:background="@color/light_blue"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/list"></include>
    </LinearLayout>
    <include layout="@layout/asset_buttom"></include>
</LinearLayout>

